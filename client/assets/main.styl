$link = #8aa4bb // #8492a6
$text = #375d61 //#3c4858
$blue = #1fb6ff
$green = #13ce66
$orange = #ffa14a // #ff7849
$red = #ff5b41

*
  margin 0
  padding 0
  box-sizing border-box

:root
  font 100% / 1.4 "Roboto", "Helvetica Neue", sans-serif
  @media (max-width: 400px)
    font-size 14px

a
  color $link

body
  background #F8F8FF // url("http://www.ojakhuri.ru/wp-content/themes/title/img/bg.svg") center / cover no-repeat
  color $text
  -moz-osx-font-smoothing grayscale
  -webkit-font-smoothing antialiased
  -webkit-text-size-adjust none // Отключает масштабирование текста в горизонтальной ориентации

.Wrap
  padding 4em 1em 1em
  margin auto
  max-width 1240px

.MainFullWidth
  margin 4em 1em 3em

@import "__Spacing"
@import "_Grid"
@import "_Btn&Form"

