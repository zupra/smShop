  background $blue
  border-color transparent
  color #FFF
  &:hover
    background $blue - 10%
  $CLR_fill()
  &._icon
    padding 0 // reset
    width 2em
    border-radius 50%
    // img
    // height 1.2em
  $outline_Mod()
  &.circle
    border-radius 3em
    padding 0 .9em

