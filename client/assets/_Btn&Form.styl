$size_Mod()
  @media (min-width: 500px)
    &.sm
      font-size .6rem
    &.lg
      font-size 1rem
    &.xl
      font-size 1.2rem

$CLR_fill()
  &.red
    background $red
    &:hover
      background $red - 10%
  &.green
    background $green
    &:hover
      background $green - 10%
  &.orange
    background $orange
    &:hover
      background $orange - 10%

item-btn(clr)
  color clr
  border-color clr
  &:hover
    background clr + 10
$CLR_outline()
  &.red
    item-btn($red)
  &.green
    item-btn($green)
  &.orange
    item-btn($orange)

button, input, select, textarea
  //font-family inherit
  outline 0
  // box-shadow none
  // font-size .8rem

// input:not([type=checkbox]):not([type=file]):not([type=color]), textarea, select
input, textarea, select
  appearance none
  border-color #7f8c8d
  // width: 100%
  &:focus
    border-color $orange

// BASE FormEl
.btn, button, input, textarea, select
  font-family: sans-serif
  border 2px solid
  // border-radius .4rem
  font-size .8rem
  line-height 1
  height 2em
  padding 0 .7em
  $size_Mod()

// BASE Btn
.btn
  box-shadow: 0px 4px 4px rgba(0, 0, 0, 0.25);
  cursor pointer
  user-select none
  
  // display inline-block
  // line-height 2em
  // text-align center
  display inline-flex
  justify-content center
  align-items center


  &:active
    //transform: translate(.2em, .2em)
    transform: translateY(.2em,)

.btn
  background $blue
  border-color: transparent;
  color #FFF
  &:hover
    background $blue - 10%
  $CLR_fill()

  &._icon
    padding 0 //reset
    width 2em

  &.circle
    border-radius: 3em;
  // $.radius
  //   border-radius .4rem


  &.outline
    border-radius .3rem
    background-color #FFF
    font-family: 'Oswald', sans-serif;
    letter-spacing: 0.03em;
    item-btn($blue)
    $CLR_outline()
    transition: background-color 0.3s, color 0.3s
    &:hover
      color #FFF

