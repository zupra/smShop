$size_Mod()
  @media (min-width: 500px)
    &.sm
      font-size .6rem
    &.lg
      font-size 1rem
    &.xl
      font-size 1.2rem

$CLR_fill()
  &.red
    background $red
    &:hover
      background $red - 10%
  &.green
    background $green
    &:hover
      background $green - 10%
  &.orange
    background $orange
    &:hover
      background $orange - 10%

// OUTLINE
item-btn(clr)
  color clr
  border-color clr
  &:hover
    background clr + 10

$CLR_outline()
  &.red
    item-btn($red)
  &.green
    item-btn($green)
  &.orange
    item-btn($orange)

// RIPPLE
ripple()
  position relative
  overflow hidden
  transform translate3d(0, 0, 0)
  &:after
    content ""
    display block
    position absolute
    width 100%
    height 100%
    top 0
    left 0
    pointer-events none
    background-image radial-gradient(circle, #000 10%, transparent 10.01%)
    background-repeat no-repeat
    background-position 50%
    transform scale(10, 10)
    opacity 0
    transition transform .5s, opacity 1s
  &:active:after
    transform scale(0, 0)
    opacity .2
    transition 0s

// .ripple
.btn, button
  &:active
    transform translateY(2px)
  ripple()

