// ========== INPUT ==========
// input:not([type=checkbox]):not([type=file]):not([type=color]),
input, textarea, select
  appearance none
  border-color #7f8c8d
  // width: 100%
  &:focus
    border-color $orange

// BASE FormEl
.btn, button, input, textarea, select
  // border-radius .4rem
  font-family sans-serif
  border 2px solid
  font-size .8rem
  line-height 1
  height 2em
  padding 0 .7em
  $size_Mod()

// =============== BASE Btn ====================
.btn
  box-shadow 0px 4px 4px rgba(0, 0, 0, .25)
  cursor pointer
  user-select none
  // display inline-block
  // line-height 2em
  // text-align center
  display inline-flex
  justify-content center
  align-items center

$outline_Mod()
  &.outline
    border-radius .3rem
    background-color #FFF
    font-family "Oswald", sans-serif
    letter-spacing .03em
    item-btn($blue)
    $CLR_outline()
    transition background-color .3s, color .3s
    &:hover
      color #FFF

// GO Btn
.btn
  background $blue
  border-color transparent
  color #FFF
  &:hover
    background $blue - 10%
  $CLR_fill()
  &._icon
    padding 0 // reset
    width 2em
  $outline_Mod()
  &.circle
    border-radius 3em
