button, input, select, textarea
  line-height 1
  outline 0
  box-shadow none

.btn
  user-select none
  height 2em
  display flex
  justify-content center
  align-items center
  line-height 1
  cursor pointer
  border 0
  color #fff
  background $red //$blue
  border-bottom 3px solid rgba(0, 0, 0, .1)
  border-radius .4em
  padding 0 1em
  transition background .3s
  &:hover
    background $red - 10% //#00aafc

  &:active
    background $blue
    border-bottom 0